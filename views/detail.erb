<h2>メモアプリ</h2>
<p><a href="/memos">戻る</a></p>
<p>
  <span style="margin-right: 16px"><b>タイトル:</b></span>
  <%= h(@memo[@id]['title']) %>
</p>

<p>
  <span style="margin-right: 48px"><b>メモ:</b></span>
  <%= h(@memo[@id]['text']) %>
</p>

<form method="get" action="/memos/<%= @id %>/edit" style="display: inline-block; margin-right: 20px;">
  <button type="submit">変更</button>
</form>

<form method="post" action="/memos/<%= @id %>" style="display: inline-block;">
  <input type="hidden" name="_method" value="delete">
  <button type="submit">削除</button>
</form>
