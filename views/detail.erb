<h2>メモアプリ</h2>
<p><a href="/memos">戻る</a></p>

<p>
  <b>タイトル:</b><br>
  <%= h(@memo['title']) %>
</p>

<p>
  <b>メモ:</b><br>
  <span style="white-space: pre-wrap;"><%= h(@memo['text']) %></span>
</p><br>

<form method="get" action="/memos/<%= hattr(@id) %>/edit" style="display: inline-block; margin-right: 20px;">
  <button type="submit">変更</button>
</form>

<form method="post" action="/memos/<%= hattr(@id) %>" style="display: inline-block;">
  <input type="hidden" name="_method" value="delete">
  <button type="submit">削除</button>
</form>
